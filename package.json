{
    "name": "nodejs-typescript-template",
    "version": "1.304.0",
    "description": "A template for a nodejs application, using typescript",
    "main": "dist/src/index.js",
    "author": "",
    "license": "MIT",
    "scripts": {
        "dev": "nodemon ./src/main.ts",
        "build": "tsc",
        "start": "node ./dist/main.js",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "prettify": "prettier './**/*.{js,jsx,ts,tsx,css,md,json,yml,yaml,html}' --config ./.prettierrc.js",
        "format": "pnpm prettify --check",
        "format:fix": "pnpm prettify --write",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "engines": {
        "node": ">=18.0.0",
        "pnpm": ">8.0.0"
    },
    "dependencies": {
        "dotenv": "16.4.5",
        "tsconfig-paths": "^4.2.0"
    },
    "devDependencies": {
        "@trivago/prettier-plugin-sort-imports": "4.3.0",
        "@types/jest": "29.5.12",
        "@types/node": "20.12.7",
        "@typescript-eslint/eslint-plugin": "7.8.0",
        "@typescript-eslint/parser": "7.8.0",
        "eslint": "8.56.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-prettier": "5.1.3",
        "eslint-plugin-unused-imports": "3.1.0",
        "jest": "29.7.0",
        "nodemon": "3.1.0",
        "prettier": "3.2.5",
        "ts-jest": "29.1.2",
        "ts-node": "10.9.2",
        "typescript": "5.4.5"
    }
}
